<% provide(:title, "Create subject") %>
<h1>Create subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisors, @subject] do |f| %>
      <%= render "shared/subject_error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>

      <h2>Add tasks</h2>
      <p><%= creat_add_task_button f, :tasks %></p>
      <%= f.submit "Create subject",  class: "btn btn-primary" %>
    <% end %>
  </div>
</div>